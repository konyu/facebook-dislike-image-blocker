{
  "name": "Facebook image detector",
  "version": "0.1",
  "manifest_version": 2,
  
  "description": "Facebook image detector",
  
  "permissions" : [
    "tabs", "http://*/*", "https://*/*", "contextMenus", "storage"
  ],
  
  "icons" : {
    "48" : "icon48.png"
  },
  
  "background" : {
    "scripts" : ["background.js"]
  },
  "browser_action" : {
    "default_icon" : "icon16.png",
    "default_title" : "browser action sample",
    "default_popup" : "popup.html"
  },
  "content_scripts": [
    {
      "matches" : ["http://www.facebook.com/*", "https://www.facebook.com/*"],
      "js" : ["jquery-1.10.2.min.js", "content.js"],
      "css": ["content.css"]
    }
  ],
  "web_accessible_resources": ["content.css"],
  "options_page": "options.html"
}